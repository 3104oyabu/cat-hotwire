<%= turbo_frame_tag cat do %>
  <div class="row py-2 border-top">
    <div class="col-3 my-auto">
      <%= cat.id %>
    </div>
    <div class="col-3 my-auto">
      <%= cat.name %>
    </div>
    <div class="col-3 my-auto">
      <%= cat.age %>
    </div>
    <div class="col-3">
      <div class="d-flex justify-content-end">
        <%= button_to "編集", edit_cat_path(cat), class: "btn btn-sm btn-outline-primary me-2", data: { turbo_frame: "modal" } %>
        <%= button_to "削除", cat, class: "btn btn-sm btn-outline-danger", method: :delete, form: { data: { turbo_confirm: "本当に？" } } %>
      </div>
    </div>
  </div>
<% end %>